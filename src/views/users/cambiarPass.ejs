<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body class="Site">
    <%- include('../partials/header') %>
    <main class="Site-content">
       


<form class="contenedorMainForm" action="/users/updatePass" method="POST">
              


    <label class="contMainFormA">Nueva Contraseña</label>
    <input
        type="password"
        name="password"
        placeholder="Ingresa tu contraseña"
        class="contMainFormB"
    >
    <% if (locals.errors && errors.password) { %>
        <p class="contMainFormA error"><%= errors.password.msg %>  </p>
    <% } %>

    <label class="contMainFormA">Confirmar nueva contraseña</label>
    <input
        type="password"
        name="confirmPassword"
        placeholder="Confirmá tu contraseña"
        class="contMainFormB"
    >
    <% if (locals.errors && errors.confirmPassword) { %>
        <p class="contMainFormA error"><%= errors.confirmPassword.msg %>  </p>
    <% } %>
    
    <label class="contMainFormA">E-Mail</label>
    <input
        type="text"
        name="email"
        readonly
        class="contMainFormB"
        value="<%= user.email %>"

    >
    <% if (locals.errors && errors.email) { %>
        <p class="contMainFormA error"><%= errors.email.msg %>  </p>
    <% } %>  
   
    
   
    <button class="contMainButton" type="submit">Actualizar Contraseña</button>
</form>


    </main>
    <%- include('../partials/footer') %>
</body>
</html>