        <div class="cajaGrande">
            <img src="/images/products/<%=prod.image %>" alt="<%= prod.name %>">
    
            <div class="cajaChica">   
                       
                
                <div class="columnaIzq">
                    <div class="renglonArriba">  
                    <p class="precios">$<%= prod.price %></p>
                    <p class="descuentos">20% OFF</p></div>
                    <div class="renglonAbajo"> 
                    <p class="descripciones"><%= prod.description %></p></div>
                </div>
    
                <div class="columnaDer">
                    <div class="iconoCarrito"> <i class="fas fa-shopping-cart"></i></div>
                    <div class="iconoFavorito"> <i class="far fa-heart"></i></i></div>
                </div>
    
            </div>
          </div>

